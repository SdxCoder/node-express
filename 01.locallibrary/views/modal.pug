mixin modal()
  div(id="modal", class="flex fixed inset-0 bg-gray-600 bg-opacity-50 items-center justify-center hidden")
    div(class="bg-white rounded-lg shadow-lg w-1/3 p-6")
      form(id="deleteForm" method="POST" action="")
        h2(class="text-xl font-bold mb-4") Delete
        p(class="text-gray-700 mb-4") Are you sure you want to delete ?
        div(class="flex justify-end space-x-2")
          button(onclick="closeModal()", type="button" class="bg-c-text-light text-white px-4 py-2 rounded") Cancel
          button(onclick="closeModal()", type="submit" class="bg-purple-500 text-white px-4 py-2 rounded") Continue